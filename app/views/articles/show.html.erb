	<%=render '/comments/form' %>

	<h3> Comments <h3>
	
	<% @post.comments.each do |comment|%>
		<ul style="list-style: none;" >
				<%= comment.body %>		</ul>
				<% if current_user==comment.user %>
				<%= link_to 'Edit', edit_post_comment_path(@post, comment)%>
